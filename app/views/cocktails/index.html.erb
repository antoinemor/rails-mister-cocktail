<%= render "banner" %>

<div class="cards-wrapper">
  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-6 col-md-3">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.5)), url(<%= 'https://unsplash.it/400?image=' + (cocktail.id * 10).to_s%>);">
            <div class="card-title text-center"><%= cocktail.name.upcase %></div>
            <%= link_to "Show", cocktail_path(cocktail), class: "card-link"  %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

